<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:weightSum="1"
        android:background="@drawable/buttonshape8">
        <ImageView
            android:id="@+id/friend_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_gravity="center_vertical"
            android:src="@drawable/friends1_1"/>
        <TextView
            android:id="@+id/friend_id"
            android:layout_width="0dp"
            android:layout_weight=".65"
            android:layout_height="wrap_content"
            android:text="I D"
            android:fontFamily="@font/blackhansans_regular"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#3d65d3"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/delete_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:layout_marginLeft="7dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="삭제"
            android:textStyle="bold"
            android:textColor="#3d65d3"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/buttonshape8" />
    </LinearLayout> />
</LinearLayout>