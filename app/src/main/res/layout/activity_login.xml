<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#FFFFFF">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight=".25">
            <ImageView
                android:id="@+id/splash_img2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".43"
                android:padding="25dp"
                android:src="@drawable/room1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".06"
                tools:ignore="NestedWeights" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".45"
                android:weightSum="1">
                <TextView
                    android:id="@+id/splash_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".33"
                    android:text="집 에 서"
                    android:gravity="end"
                    android:textColor="#3d65d3"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="30sp"
                    android:autoSizeMaxTextSize="60sp"
                    android:autoSizeStepGranularity="2sp"
                    android:fontFamily="@font/blackhansans_regular"/>
                <TextView
                    android:id="@+id/splash_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".33"
                    android:text="간 편 하 고"
                    android:gravity="end"
                    android:textColor="#4788c7"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="30sp"
                    android:autoSizeMaxTextSize="60sp"
                    android:autoSizeStepGranularity="2sp"
                    android:fontFamily="@font/blackhansans_regular"/>
                <TextView
                    android:id="@+id/splash_txt3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".33"
                    android:text="재 미 있 게"
                    android:gravity="end"
                    android:textColor="#4788c7"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="30sp"
                    android:autoSizeMaxTextSize="60sp"
                    android:autoSizeStepGranularity="2sp"
                    android:fontFamily="@font/blackhansans_regular"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".06"
                tools:ignore="NestedWeights" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".08" />
        <LinearLayout
            android:layout_weight=".12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>
            <TextView
                android:id="@+id/splash_title1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:textColor="#3d65d3"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="25sp"
                android:autoSizeMaxTextSize="60sp"
                android:autoSizeStepGranularity="2sp"
                android:text="H"
                android:gravity="end"
                android:fontFamily="@font/blackhansans_regular"/>
            <TextView
                android:id="@+id/splash_title2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".45"
                android:textColor="#3d65d3"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="25sp"
                android:autoSizeMaxTextSize="60sp"
                android:autoSizeStepGranularity="2sp"
                android:text="EALTH"
                android:gravity="start"
                android:fontFamily="@font/blackhansans_regular"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight=".12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>
            <TextView
                android:id="@+id/splash_title3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:textColor="#3d65d3"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="25sp"
                android:autoSizeMaxTextSize="60sp"
                android:autoSizeStepGranularity="2sp"
                android:text="O"
                android:gravity="end"
                android:fontFamily="@font/blackhansans_regular"/>
            <TextView
                android:id="@+id/splash_title4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".65"
                android:textColor="#3d65d3"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="25sp"
                android:autoSizeMaxTextSize="60sp"
                android:autoSizeStepGranularity="2sp"
                android:text="F"
                android:gravity="start"
                android:fontFamily="@font/blackhansans_regular"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight=".12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>
            <TextView
                android:id="@+id/splash_title5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:textColor="#3d65d3"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="25sp"
                android:autoSizeMaxTextSize="60sp"
                android:autoSizeStepGranularity="2sp"
                android:text="T"
                android:gravity="end"
                android:fontFamily="@font/blackhansans_regular"/>
            <TextView
                android:id="@+id/splash_title6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".65"
                android:textColor="#3d65d3"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="25sp"
                android:autoSizeMaxTextSize="60sp"
                android:autoSizeStepGranularity="2sp"
                android:text="RAINING"
                android:gravity="start"
                android:fontFamily="@font/blackhansans_regular"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05"/>
        <com.google.android.gms.common.SignInButton
            android:layout_weight=".01"
            android:id="@+id/btn_google"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/buttonshape8"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".13" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>